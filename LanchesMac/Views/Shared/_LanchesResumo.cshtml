@model Lanche

<div class="col-sm-4 col-lg-4 col-md-4">
    <div class="img-thumbnail d-flex justify-content-center">
        <img src="~/images/cheesesalada1.jpg" alt="" />
    </div>
    <div class="figure-caption">
        <h3 class="float-right">@Model.Preco.ToString("c")</h3>
        <h3>
            <a asp-controller="Lanche" asp-action="Details" asp-route-lancheId="@Model.LancheId">
                @Model.Nome
            </a>
        </h3>
        <p>@Model.DescricaoCurta</p>
    </div>
    <div class="addToCard text-right">
        <p class="button">
            <a class="btn btn-primary" id="cardButton" asp-controller="CarrinhoCompra" asp-action="AdicionarItemCarrinhoCompra" asp-route-lancheId="@Model.LancheId">
                Incluir no Carrinho
            </a>
        </p>
    </div>
</div>